\newcommand{\diff}[1]{%                  % d...
    \ensuremath{\,\mathrm{d}{#1}}%
}
\newcommand{\dt}{%                  % dt
    \diff{t}%
}
\newcommand{\ddt}{%                 % d/dt
    \ensuremath{\frac{ \diff{} }{ \dt }}%
}
\newcommand{\DIFF}[1]{%                  % Delta...
    \ensuremath{\,\Delta #1}%
}
\newcommand{\Dt}{%                  % Delta t
    \DIFF{t}%
}
\newcommand{\DELTA}[1]{%            % Delta
    \ensuremath{{}^{#1}\!\Delta}%
}
\newcommand{\DelTa}[1]{%            % Delta
%    \ensuremath{{}^{#1}\Delta}%
    \ensuremath{\Delta}%
}
\newcommand{\e}[1]{%               % Einheitsvektor
    \ensuremath{ \vec{e}_{#1} }%
}
\newcommand{\eY}[1]{%               % Einheitsvektor Y (parallel Stoárichtg)
    \ensuremath{ \vec{e}^\mathrm{\,#1}_\parallel }%
%    \ensuremath{ e^\mathrm{\,#1}_\parallel }%
}
\newcommand{\eX}[1]{%               % Einheitsvektor X (senkrecht Stoárichtg)
    \ensuremath{ \vec{e}^\mathrm{\,#1}_\perp }%
%    \ensuremath{ e^\mathrm{\,#1}_\perp }%
}
\newcommand{\attime}[2]{%           % Gr”áe #1 zum Zeitpunkt t=#2
%    \ensuremath{ {#1}_{t=#2} }%
    \ensuremath{ {#1}_{#2} }%
}
\newcommand{\bef}[1]{%              % Gr”áe #1 vor dem Stoá
    \attime{#1}{1}%
}
\newcommand{\aft}[1]{%              % Gr”áe #1 nach dem Stoá
    \attime{#1}{2}%
}

